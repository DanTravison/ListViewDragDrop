<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dragdrop="clr-namespace:ListViewDragDrop.DragDrop"
             x:Class="ListViewDragDrop.DragDrop.DragItemView"
             >
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid ColumnDefinitions="Auto, *">
                <Label BindingContext="{TemplateBinding DragItemStyle}"
                       x:DataType="dragdrop:DragItemStyle"
                       Grid.Column="0"
                       FontFamily="FluentUI"
                       Text="{Binding DragGlyph, Mode=OneWay}"
                       TextColor="{Binding DragColor, Mode=OneWay}"
                       FontSize="30"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       />
                <ContentPresenter x:Name="ItemPresenter" Grid.Column="1"/>
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
